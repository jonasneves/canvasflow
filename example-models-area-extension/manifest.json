{
  "manifest_version": 3,
  "name": "GitHub Models Arena",
  "version": "1.0",
  "description": "Compare and test multiple AI models from GitHub Models API with auto-fallback and rate limit tracking",
  "permissions": [
    "activeTab",
    "sidePanel",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Open GitHub Models Arena"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
